{{!< default}}

<div class="container">
    <div class="row">
        <div class="content-column col-lg-8">
            <div class="content-area">
                <main class="site-main">
                    <h1>News</h1>
                    {{#get "posts"  filter="tags:[news]"}}
                        {{#foreach posts}}

                        {{!-- The tag below includes the markup for each post - partials/post-card.hbs --}}
                            <div class="post-column col-xl-4 col-md-6">
                                {{> "loop"}}
                            </div>

                        {{/foreach}}
                    {{/get}}
                </main>
            </div>
        </div>
    </div>
</div>